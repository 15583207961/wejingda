page{
    background-color: #f3f3f3;
}

.card{
    margin-top: 20rpx;
    width: calc(100% - 48rpx);
    height: 400rpx;
    margin: 0 auto;
    background-color: #2196F3;
    border-radius: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
    color: #fff;
    position: relative;
}
.button{
    display: flex;
    position: absolute;
    bottom: 30rpx;
}
.button text{
    padding-left: 30rpx;
}
.price {
    position: absolute;
    right: 40rpx;
    bottom: 18rpx;
    font-size: 45rpx;
    font-weight: 600;
}
.price text{
    font-size: 70rpx;
}

/* 导航栏 */

.nav{
    width: calc(100% - 48rpx);
    height: 300rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin:0 auto;
    margin-top:70rpx;
}
.nav_item{
    flex: 1;
    text-align: center;
    color: #686060;
}
.image {
    margin: 0 auto;
    width: 55rpx;
    height: 45rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
}
.image image{
    width: 100%;
    height: 100%; 
}

.limit_cavas{
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color:rgba(100, 92, 92,0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}
.limit_container{
    width: 550rpx;
    background-color: #fff;
    border-radius:  21rpx;
    text-align: center;
    overflow: hidden;
}
.limit_container .title{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    font-weight: 550;
}
.input_1{
    width: 90%;
    height: 50rpx;
    border: 1rpx solid #bebebe;
    border-radius: 10rpx;
    text-align: left;
    margin:  0 auto;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    padding-left: 10rpx;
}
.bottom{
    display: flex;
    height: 120rpx;
}
.bottom view{
    flex: 1;
    text-align: center;
    line-height: 120rpx;
    font-size: 32rpx;
    font-weight: 550;
    border-top: 1rpx solid #e0dddd;
}
.cancel{
    border-right: 1rpx solid #e0dddd;
}
.authcode{
    font-size: 28rpx;
    font-weight: 500;
}

