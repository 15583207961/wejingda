page{
  background-color: #f5f5f5;
}
.top-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  background-color: #fff;
  box-shadow: 0px 2px 4px 0px rgba(231, 231, 231, 0.5);
}
.icon-top{
  height: 570rpx;
  width: 100vw;
  background-image: url("https://singlestep.cn/wejinda/resource/img/bg_jwlogin_top.png");
  background-size: 100%;
  background-repeat: no-repeat;
  position: absolute;
  z-index: -1;

  }
  .backImage{
    width: 52rpx;
    height: 52rpx;
    object-fit: fill;
    margin-left: 22rpx;
    margin-right: 223rpx; 
  }
  .titleTop{
  position: fixed;
  width: 100vw;
  top:0;
  display: flex;
  align-items: center;  
  z-index: 100;
  }


  /* container */
.container{
  width: 100vw;
  margin-left: 32rpx;
}
.item{
  width: 686rpx;
  height: 184rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
  margin-top: 24rpx;
}
.item-image{
  width: 188rpx;
  height: 125rpx;
}
.item-base-info{
  margin-left: 14rpx;
}
.item-name{
  font-size: 34rpx;
  font-weight: 600;

}
.item-speaker{
  margin-top: 9rpx;
  font-size: 28rpx;
  color: #5A5A5A;
}
.item-other-info{
  font-size: 24rpx;
  color: #A2A2A2;
  margin-top: 10rpx;
}
.end{
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  font-size: 24rpx;
  color: #A2A2A2;
}
.people{
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  color: #A2A2A2;
  font-size: 24rpx;
}