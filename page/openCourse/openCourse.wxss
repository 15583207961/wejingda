/* modal */
.modal{
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-contain{
  width: 522rpx;
  min-height: 566rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: relative;
  animation: zoomContain 200ms linear;
}
