}

.modal-show-mask{
  position: absolute;
  top: 0;
  height: 100vh;
  width: 100vw;
  opacity: 0;
  background: rgba(0,0,0,.7);
  animation: showmask 200ms linear;
  animation-fill-mode:forwards;
}
@keyframes showmask {
  0%{
    opacity: 0;
  }
  100%{
    opacity: 100%;
  }
}

@keyframes zoomContain{
  0%{
    transform: scale(0.7);
    opacity: 0;
  }
  80%{
    transform: scale(1.1);
  }
  100%{
    transform: scale(1);
    opacity: 1;
  }
}

.modal-close-mask{
  animation: closeMask 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes closeMask{
  0%{
    opacity: 100%;
  }
  100%{
    opacity: 0%;
  }
}

.modal-contain-close{
  width: 522rpx;
  min-height: 566rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: relative;
  animation: containClose 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes containClose{
  0%{
    transform: scale(1);
    opacity: 1;
  }
  20%{
    transform: scale(1.1);
  }
  100%{
    transform: scale(0.6);
    opacity: 0;
  }
}
