/* page/msgList/msgList.wxss */

page{
  background: #f5f5f5;
}
.top-shadow{
 position: fixed;
 top: 0;
 z-index: 1;
  height: 1rpx;
  background-color: #fff;
  width: 100%;
  box-shadow: 0rpx 4rpx 10rpx rgba(155, 148, 148, 0.5);
}
.item{
  display: flex;
  align-items: center;
  position: relative;

  height: 144rpx;
  background-color: #fff;
}
.item-headpic{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-left: 32rpx;
  margin-right: 24rpx;
}
.name{
  font-size: 34rpx;
  color: #000;
}
.msg{
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #B5B5B5;
}
.tips{
  position: absolute;
  top: 48rpx;
  right: 50rpx;
  background: red;
  font-size: 20rpx;
  padding: 0 10rpx;
  text-align: center;
  color: #ffffff;
  border-radius:40rpx ;
}
.time{
  position: absolute;
  top: 24rpx;
  right: 30rpx;
  font-size: 24rpx;
}