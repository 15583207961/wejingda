@import '../../template//topshow//topshow.wxss';

/* 第二部分，图表部分 */
.chart_view{
    width: 694rpx;
    height: 459rpx;
    background: #FFFFFF;
    box-shadow: 0px 4px 7px 0px rgba(245,245,245,1);
    border-radius: 21rpx;
    position: absolute;
    left: 28rpx;
    top: 315rpx;
}
.chart_head{
    width: 100%;
    height: 80rpx;
    /* background:yellow; */
    display: flex;
    align-items: center;
}
.chart_head image{
    width: 49rpx;
    height: 49rpx;
    margin:0 22rpx;
}
.chart_head text{
    font-size: 28rpx;
    color: #333333 ;
    font-weight: 550;
}
.chart_ec{
    position: absolute;
    top: 10rpx;
    width: 100%;
    height: 442rpx;
}

/* 第三部分 */
.time{
    width: 694rpx;
    height: 92rpx;
    background-color: #fff;
    margin: 0 auto;
    box-shadow: 0px 4px 7px 0px rgba(245,245,245,1);
    margin-top: 335rpx;
    border-radius: 21rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}
.time view{
    margin:0 20rpx;
}

.time .image{
    position: absolute;
    left: 0rpx;
    width: 49rpx;
    height: 49rpx;
    background-color: #F7D13C ;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 23rpx;
    margin: 0 20rpx 0 32rpx;
}
.time image{
    width: 30rpx;
    height: 30rpx;
}

.time::after{
    content: "";
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #979797;
    position: absolute;
    right: 32rpx;
    transform: rotate(45deg);
    border-left:0 ;
    border-bottom: 0;
}


/* 第四部分 */
.data_container{
    width: 694rpx;
    margin: 0 auto;
    margin-top: 24rpx;
    border-radius: 24rpx;
    background-color: #fff;
}
.data_container .head{
    width: 100%;
    height: 92rpx;
    /* background: yellow; */
    display: flex;
    align-items: center;
    font-size: 28rpx;
    font-weight: 550;
}
.head .image{
    width: 49rpx;
    height: 49rpx;
    background-color: #0FCB6E;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 23rpx;
    margin: 0 20rpx 0 32rpx;
}
.head .image image{
    width: 36rpx;
    height: 36rpx;
}

.item{
    width: 100%;
    height: 100rpx;
    /* box-sizing: border-box; */
    display: flex;
    align-items: center;
    padding-top: 10rpx;
    padding-bottom:10rpx ;
}
.item .image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 70rpx; 
    margin-left: 32rpx;
    overflow: hidden;
    margin-right: 20rpx;
    
}
.item .image image{
    width: 100%;
    height: 100%;
}
.merchant_time{
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #6D6D6D;
}
.merchant_price{
    flex: 1;
    text-align: right;
    padding-right: 32rpx;
}
.tip{
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #6D6D6D;
    font-size: 28rpx;
}