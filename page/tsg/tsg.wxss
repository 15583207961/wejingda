@import '../../template/topshow/topshow.wxss';
page{
    width: 100vw;
    height: 100vh;
}
/* 第二部分 */
.chart_view{
    width: 694rpx;
    height: 459rpx;
    background: #FFFFFF;
    box-shadow: 0px 4px 7px 0px rgba(245,245,245,1);
    border-radius: 21rpx;
    position: absolute;
    left: 28rpx;
    top: 315rpx;
}
.chart_head{
    width: 100%;
    height: 120rpx;
    
    display: flex;
    align-items: center;
}
.chart_head image{
    width: 64rpx;
    height: 64rpx;
    margin:0 32rpx;
}
.chart_head text{
    color: #333333 ;
    font-weight: 550;
    font-size: 36rpx;
    font-weight: normal;
    letter-spacing: 1rpx;
    color: #333333;
}
.chart_ec{
    position: absolute;
    top: 10rpx;
    width: 100%;
    height: 422rpx;
}

/* 第三部分 */
.time{
    width: 686rpx;
    height: 112rpx;
    background-color: #fff;
    margin: 0 auto;
    box-shadow: 0px 4px 7px 0px rgba(245,245,245,1);
    margin-top: 345rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    font-size: 36rpx;
}


.sreach-image{
    
    width: 64rpx;
    height: 64rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 23rpx;
    margin: 0 30rpx 0 32rpx;
}


.time::after{
    content: "";
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    border: 4rpx solid #979797;
    position: absolute;
    right: 62rpx;
    transform: rotate(45deg);
    border-left:0 ;
    border-bottom: 0;
    border-radius: 5rpx;
}

/* 第四部分 */
.data_container{
    width: 694rpx;
    margin: 0 auto;
    margin-top: 24rpx;
    border-radius: 24rpx;
    background-color: #fff;
    margin-bottom: 100rpx;
    box-sizing: border-box;
    padding: 32rpx;
    padding-bottom: 0;
}
.data_container .head{
    width: 100%;
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
    font-size: 36rpx;
    font-weight: normal;
    color: #333333;
}
.head-img{
    width: 64rpx;
    height: 64rpx;
    margin-right: 32rpx;
}
.detail_item{
    position: relative;
    height: 144rpx;
    
    margin-top: 32rpx;

}
.item_title{
   
    padding-top: 16rpx;
    color: #333;
    font-size: 34rpx;
    font-weight: normal;
    color: #000000;
    margin-bottom: 24rpx;
}

.bottom-info{
    display: flex;
    font-size: 28rpx;
    font-weight: normal;
    color: #B5B5B5;
}
.item_bottom_info{
    
    padding-top: 16rpx;
    padding-bottom: 12rpx;
    color: #6D6D6D;
    font-size: 21rpx;
}
.bottom-info view{
    margin-right: 44rpx;
}
