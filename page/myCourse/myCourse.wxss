page{
  background-color: #F5F5F5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.nav-bar{
  width: 100vw;
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #38373718;
}
.query,.area{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: normal;
  
}
.spilte{
  width: 1rpx;
  height: 54rpx;
  background-color: #9797974f;
  /* border: 1rpx solid #9797974f; */
}
.selected{
  color: #3B8DF6;
}

/* 报名 */

  /* container */
  .container{
    padding-top: 80rpx;
    width: 100vw;
    margin-left: 32rpx;
    padding-bottom: 48rpx;
  }
  .item{
    width: 686rpx;
    height: 184rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 28rpx 24rpx;
    box-sizing: border-box;
    display: flex;
    position: relative;
    margin-top: 24rpx;
  }
  .item-image{
    width: 188rpx;
    height: 125rpx;
  }
  .item-base-info{
    margin-left: 14rpx;
  }
  .item-name{
    font-size: 34rpx;
    line-height: 1;
  
  }
  .item-speaker{
    margin-top: 9rpx;
    font-size: 28rpx;
    color: #5A5A5A;
  }
  .item-other-info{
    font-size: 24rpx;
    color: #A2A2A2;
    margin-top: 22rpx;
  }
  .end{
    position: absolute;
    bottom: 24rpx;
    right: 32rpx;
    font-size: 24rpx;
    color: #A2A2A2;
  }
  .apply-Course{
    width: 96rpx;
    height: 96rpx;
    position: fixed;
    bottom: 48rpx;
    right: 48rpx;
  }
  .delete-image-apply{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: 16rpx;
    right: 16rpx;
  }

  /* 创办课程 */
  .create-item{
    width: 686rpx;
    height: 454rpx;
    overflow: hidden;
    border-radius: 16rpx;
    background-color: #fff;
    margin-top: 32rpx;
    position: relative;
  }
  .create-image-view{
    width: 686rpx;
    height: 318rpx;
    overflow: hidden;
  }
  .create-image{
    width:686rpx;

  }
  .info-1{
    margin-top: 16rpx;
    display: flex;
    margin-left: 32rpx;
  }
  .create-class-name{
    font-size: 34rpx;
    font-weight: 600;
  
  }
  .create-base-info{
    margin-left: 32rpx;
    margin-top: 24rpx;
    font-size: 24rpx;
    color: #A2A2A2;
  }
  .item-state{
    position: absolute;
    right: 32rpx;
    bottom: 86rpx;
    color: #A2A2A2;
    font-size: 24rpx;
  }
  .update-icon,.delete-icon{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
  }
  .update-icon{
    bottom: 10rpx;
    right: 80rpx;
  }
  .delete-icon{
    bottom: 10rpx;
    right: 8rpx;
  }
