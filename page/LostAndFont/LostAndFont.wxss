.contain-show{
  animation: containShow linear 200ms;
  animation-fill-mode: forwards;
}
@keyframes containShow{
  0%{
    height: 0;
  }
  100%{
    height: 100vh;
  }
}
.contian-hide{
  animation: containHide linear 200ms;
  animation-fill-mode: forwards;
}
@keyframes containHide{
  0%{
    height: 100vh;
  }
  100%{
    height: 0;
  }
}

.bottom-tools-show{
  animation: toolsShow linear 200ms;
  animation-fill-mode: forwards;
}
@keyframes toolsShow{
  0%{
    transform: translateY(100%);
  }
  100%{
    transform: translateY(0);
  }
}
.bottom-tools-hide{
  animation: toolsHide linear 200ms;
  animation-fill-mode: forwards;
}
@keyframes toolsHide{
  0%{
    transform: translateY(0);
  }
  100%{
    transform: translateY(100%);
  }
}