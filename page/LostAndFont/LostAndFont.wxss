/* 新增加的想ui */
.fun-tool-btn{
  position: fixed;
  bottom: 64rpx;
  right: 64rpx;
}
.sreach-tool,.add-tool,.cha-more{
  width: 100rpx;
  height: 100rpx;
  border-radius:64rpx ;
  margin-bottom: 12rpx;
}
.sreach-tool{
  margin-bottom: 18rpx;
}
.cha-more{

  margin-bottom: 0rpx;
}
.cha-more-rotate-45-0{
  animation: rotate45 200ms linear;
  animation-fill-mode: forwards;
}
.cha-more-rotate-0-45{
  animation: rotate0 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes rotate45{
 0%{
  transform: rotate(45deg);
 }
 100%{
  transform: rotate(0deg);
 }
}
@keyframes rotate0{
  0%{
   transform: rotate(0deg);
  }
  100%{
   transform: rotate(45deg);
  }
 }
.fun-tool-top{

  height: 0rpx;
  overflow: hidden;
  padding-bottom: 50rpx;
  margin-bottom: -50rpx;
}
.fun-tool-top image{
  display: block;
}

.fun-tool-top-show{
  animation: show 200ms linear;
  animation-fill-mode: forwards;
}
.fun-tool-top-hide{
  animation: hide 200ms linear;
  animation-fill-mode: forwards;
}
@keyframes show{
  0%{
    height: 0rpx;
  }
  100%{
    height: 236rpx;
  }
}
@keyframes hide {
  0%{
    height: 236rpx;
  }
  100%{
    height: 0rpx;
  }
}

