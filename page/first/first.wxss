/* 第一登录页面 */
.firstPage{
    width: 100vw;
    height: 100vh;
    background-color: #eeeeee;
    display: flex;
    justify-content: center;
    align-items: center;
   
}
.inputfrom{
    box-sizing: border-box;
    width: 696rpx;
    height: 400rpx;
    background-color: #fff;
    text-align: center;
    border-radius: 24rpx;
}
.first_page_title{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    font-weight: 550rpx;
    margin-top: 10rpx;
}

input{
    width: 80%;
    height: 80rpx;
    /* border: 1rpx solid #333; */
    background-color: rgba(238, 238, 238, 0.603);
    margin: 0 auto;
    border-radius:80rpx;
    margin-top: 12rpx;
    margin-bottom: 32rpx;
}
.btn{
    width: 40%;
    height: 80rpx;
    background-color: rgb(0,173,25);
    margin: 0 auto;
    line-height: 80rpx;
    border-radius: 80rpx;
    color: #fff;
    font-size: 38rpx;
    font-weight: 550;

}
.agreement{
   width: 80%;
   margin: 0 auto;
    margin-top: 30rpx;
   justify-content:left;
    margin-bottom: 30rpx;
    font-size: 32rpx;
}



.Detail{
    width: 100vw;
    height: 100vh;
    position:absolute;
    left: 0;
    top: 0;
    background-color: rgba(1,1,1,0.4);
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
}
.Detail-contain{
    width: 80%;
    height: 70%;
    background-color: #fff;
    overflow: scroll;
    padding: 20rpx;
    border-radius: 24rpx;
    position: relative;
}
.back{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    background-color: red;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    font-weight: 700;
    display: inline-block;
    position: absolute;
    right:40rpx;
    top: 200rpx;
    z-index: 100;
}
.text-title{
    display: inline-block;
    width: 100%;
    text-align: center;
}

.underline{
    text-decoration: underline ;
    color: rgb(34, 144, 235);
}