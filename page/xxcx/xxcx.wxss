.semester{
    text-align: center;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #dfdfdfc4;
    color: #afafaf;
}

.semester::after{
    content: "";
    display: inline-block;
    height: 0rpx;
    width: 0rpx;
    border: 15rpx solid transparent;
    border-top: 15rpx solid #afafaf;
   position: relative; 
    top: 8rpx;
    left: 20rpx;
}

.show_van_picker{
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 10;
    animation: showpicker 0.5s linear;
    animation-fill-mode: forwards;
}
.hide_van_picker{
    width: 100%;
    position: fixed;
    bottom: 0;
    animation: hidepicker 0.5s linear;
    animation-fill-mode: forwards;
}

@keyframes showpicker{
    0%{
        height: 0;
    }
    100%{
        height: 616rpx;
    }
}
@keyframes hidepicker{
    0%{
        height: 616rpx;
    }
    100%{
        height: 0;
    }
}

.gradeList{
    width: 100%;
    margin-top: 21rpx;
    margin-bottom: 100rpx;
}
.grade_item{
    position: relative;
    width: 100%;
    /* height: 77rpx; */
    overflow: hidden;
    line-height: 77rpx;
    font-size: 32rpx;
    color: #333333 ;
    padding: 10rpx 28rpx;
   
}
.grade_item2{
    animation: heightlow 0.5s linear; 
    animation-fill-mode: forwards;
}
@keyframes heightlow{
    0%{
        height: 184rpx;
    }
    100%{
        height: 77rpx;
    }
}
.grade_item1{
    animation: heightlong 0.5s linear;
    animation-fill-mode: forwards;
}
@keyframes heightlong{
    0%{
        height: 77rpx;
    }
    100%{
        height: 184rpx;
    }
}
.item_grade{
