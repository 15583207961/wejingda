
view{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
page{
    background-color: #f5f5f5;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}

/* 校园页面头部模块 */
.compus_head{
    width: 100%;
    height: 652rpx;
    position: relative;
}
.head_image{
    width: 450rpx;
    height: 375rpx;
    position: absolute;
    top: 155rpx;
    left: 272rpx;
}
.head_image image{
    width: 100%;
    height: 100%;
}

/* 导航栏模块 */

.compus_nav{
    box-sizing: border-box;
    width:702rpx;
    height: 260rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 21rpx;
    position: absolute;
    top: 533rpx;
    left: 28rpx;
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx 0;
}
.compus_item{
    width: 139rpx;
    height: 121rpx;
    text-align: center;
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.compus_item image{
    width: 42rpx;
    height: 35rpx;
    margin-bottom:8rpx;
}

/* 轮播图模块 */

.swiper{
    margin: 0 auto;
    margin-top: 160rpx;
    width: 702rpx;
    height: 324rpx;
    border-radius: 24rpx;
    overflow: hidden;
}
.swiper_item{
    width: 702rpx;
    height: 100%;
}
.swiper_item image{
    width: 100%;
    height: 100%;
}

/* 数据可视化区域 */
.data_visualization{
    box-sizing: border-box;
    margin:0 auto;
    margin-top:22rpx ;
    width:702rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.data_vis_item{
    width: 336rpx;
    height: 300rpx;
    background-color: #fff;
    position: relative;
    border-radius: 21rpx;
    box-shadow: 0px 4px 7px 0px rgba(245,245,245,1);
}
.data_vis_icon{
    width: 49rpx;
    height: 49rpx;
    margin: 21rpx;
}
.data_vis_icon image{
    width: 100%;
    height: 100%;
}
.data_vis_title{
    margin-top: 14rpx;
    margin-left: 21rpx;
    font-size: 32rpx;
    color: #333333;
    font-weight: 600rpx;
}
.data_vis_time{
    margin-left: 21rpx;
    font-size: 22rpx;
    color: #6D6D6D;
}
.echart_ykt{
    width: 336rpx;
    height: 330rpx;
    position: absolute;
    top: 60rpx;
}
.data_vis_item .value{
    position: absolute;
    width: 100%;
    text-align: center;
    bottom: 40rpx;
    font-size: 50rpx;
    font-weight: 700;
    color: rgb(1,153,255);
}
