page{
  background-color: #f5f5f5;
}
.container{
  padding-bottom: 32rpx;
}
.item{
  width: 686rpx;
  height: 200rpx;
  border-radius: 16rpx;
  background-color: #fff;
  margin-top: 32rpx;
  margin-left: 32rpx;
  display: flex;
  position: relative;
}
.image-view{
  width: 188rpx;
  height: 168rpx;
  overflow: hidden;
  border-radius: 8rpx;
  margin-top: 16rpx;
  margin-left: 16rpx;
  margin-right: 32rpx;
}
.item-image{
  width: 188rpx;
  
}
.item-info{
  width: 238rpx;
  margin-top: 16rpx;

}
.item-name{
  font-size: 34rpx;
  color: #333333;
  margin-bottom: 14rpx;
}
.item-desc{
  color: #b5b5b5;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;


 
}
.item-time{
  margin-top: 24rpx;
  font-size: 16rpx;
  color: #b5b5b5;
}
.tips{
  width: 100rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 20rpx;
  background-color: #0099ff;
  border-radius: 32rpx;
  position: absolute;
  top: 16rpx;
  right: 32rpx;
}
.true{
  background-color: #07c160;
}
.false{
  background-color: #ffc533;
}
.delete{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  bottom: 16rpx;
  right: 14rpx;
}