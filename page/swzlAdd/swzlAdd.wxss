page{
  background-color: #f5f5f5;
}
.image-top-container{
  position: relative;
}
.image-top{
  display: block;
  margin: 0 auto;
  margin-top: 32rpx;
  width: 686rpx;
}
.text-tips{
  text-align: center;
  font-size: 34rpx;
  color: #b5b5b5;
  margin-top: 24rpx;
}
.delete-view{
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0 ;
  right: 10rpx;
  background-color: rgba(0, 0, 0, 0);
}
.delete-image{
  width: 48rpx;
  height: 48rpx;
}
.swzl-add-image{
  width: 702rpx;
  height: 394rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  background-color: #fff ;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
}
.swzl-center-icon{
  width: 128rpx;
  height: 128rpx;
  border-radius: 128rpx;
  background-color: #EBEBEB ;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  font-weight: 700;
  color: #fff;
}

.triangle{
  width: 36rpx;
  height: 26rpx;
margin-right: 32rpx;
}
.swzl-add-where,.swzl-add-when,.swzl-add-short-desc{
  width: 686rpx;
  margin: 0 auto;
  margin-top: 28rpx;
  height: 112rpx;
  border-radius: 16rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.pick-time{
  display: flex;
  align-items: center;
  width: 100%;
}
.swzl-where-icon{
  width: 40rpx;
  height: 40rpx;
  margin: 0 32rpx;
}


.swzl-where-input,.swzl-when-input,.swzl-thing-input{
  width: 580rpx;
  padding-left: 32rpx;
}
.pick-time{
  display: flex;
  flex: 1;
}
.picker{
  display: flex;
  align-items: center;
}

.swzl-add-textarea{
  padding: 24rpx;
  width: 702rpx;
  margin-top: 24rpx;

  box-sizing: border-box;
}
.textarea-view{
  position: relative;
  padding-bottom: 64rpx;
  background-color: #fff;
  border-radius: 18rpx;
  width: 702rpx;
  margin: 0 auto;

}
.numTips{
  position: absolute;
  bottom: 24rpx;
  right: 56rpx;
  font-size: 24rpx;
  color: #333333;
}

.swzl-send{
  margin: 0 auto;
  margin-top: 48rpx;
  width: 310rpx !important;
  height: 82rpx !important;
  margin-bottom: 48rpx;
}