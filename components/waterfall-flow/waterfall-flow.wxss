
/* 瀑布流 */
.swzl-waterfall-flow{
  width: 100vw;
  display: flex;
}
.swzl-flow-left{
  height: 200rpx;
}
.swzl-flow-right{
  height: 200rpx;
}
.swzl-left-item,.swzl-right-item{
  width: 339rpx;
  word-wrap:break-word;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 24rpx;
  margin-left: 24rpx;
}


.swzl-item-image{
  max-width: 339rpx;
  max-height: 500rpx;
  object-fit: fill;
}
.swzl-keyword{
margin-top: 24rpx;
margin-left: 20rpx;
color: #333333;
font-size: 28rpx;
}
.swzl-item-profile{
  width: 100%;
  height: 84rpx;
  position: relative;
}
.swzl-item-headimg{
  width: 52rpx;
  height: 52rpx;
  border-radius: 52rpx;
  overflow: hidden;
  position: absolute;
  left: 20rpx;
  top: 12rpx;
}
.swzl-item-autor,.swzl-item-where,.swzl-item-when{
  position: absolute;
  top: 12rpx;
  left: 80rpx;
  color: #777777 ;
  font-size: 20rpx;
  line-height: 28rpx;
}
.swzl-item-where{
  left: 80rpx;
  top: 40rpx;
}
.swzl-item-when{
  left: 120rpx;
  top: 40rpx;
}